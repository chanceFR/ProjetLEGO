<AnchorPane fx:id="anchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="660.0" prefWidth="955.0" stylesheets="@../../../style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.antoromeochrist.projetlego.Controller">
    <children>

        <ImageView fx:id="imageView" fitHeight="57.0" fitWidth="57.0" layoutX="257.0" layoutY="127.0" pickOnBounds="true" preserveRatio="true" />

        <!-- Environnement 3D-->
        <SubScene fx:id="subScene" depthBuffer="true" height="372.0" layoutX="361.0" layoutY="208.0" width="383.0">
            <antiAliasing>
                <SceneAntialiasing fx:constant="BALANCED" />
            </antiAliasing>
            <root>
                <Group fx:id="group" />
            </root>
        </SubScene>

        <!-- Cote gauche du logiciel -->
        <VBox fx:id="vbox" layoutX="-2.0" layoutY="130.0" prefHeight="530.0" prefWidth="260.0">
            <children>
               <!-- Barre de recherche -->
                <Group>
                    <children>
                        <!-- Rectangle pour la taille du groupe-->
                        <Rectangle arcWidth="5.0" fill="#2c2f35" height="57.0" smooth="false" stroke="BLACK" strokeType="INSIDE" width="257.0" />
                        <!-- Bouton -->
                        <Button fx:id="searchButton" layoutX="178.0" layoutY="14.0" mnemonicParsing="false" onAction="#search" prefHeight="32.0" prefWidth="38.0" stylesheets="@../../../style.css" text="">
                            <graphic>
                                <ImageView fitHeight="13.0" fitWidth="14.0">
                                    <Image url="@../../../loupe.png" />
                                </ImageView>
                            </graphic>
                        </Button>
                        <!-- Zone de texte ou on peut ecrire-->
                        <TextField fx:id="searchBar" layoutX="14.0" layoutY="14.0" prefHeight="33.0" prefWidth="170.0" stylesheets="@../../../style.css" />
                    </children>
                </Group>

                <!-- Resultat de la requete, tableau des elements disponible -->
                <Group>
                    <children>
                        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="WHITE" height="201.0" opacity="0.0" stroke="BLACK" strokeType="INSIDE" width="255.0" />
                        <ListView fx:id="listView" layoutX="20.0" layoutY="24.0" prefHeight="447.0" prefWidth="217.0" stylesheets="@../../../style.css" />
                    </children>
                </Group>
            </children>
        </VBox>

        <HBox fx:id="hbox" layoutY="30.0" prefHeight="98.0" prefWidth="955.0">
            <children>
                <Group>
                    <children>
                        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="86.0" layoutX="41.0" layoutY="1.0" opacity="0.0" stroke="BLACK" strokeType="INSIDE" width="333.0" />
                        <Group fx:id="clonee" layoutX="17.0" layoutY="10.0">
                     <children>
                        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="88.0" opacity="0.0" stroke="BLACK" strokeType="INSIDE" width="105.0" />
                                <ImageView fx:id="cloneeicon" fitHeight="14.0" fitWidth="14.0" layoutX="49.0" layoutY="13.0">
                                    <Image url="@../../../clone.jpg" />
                                </ImageView>
                                <Text fx:id="cloneetext" fill="#edeeef" layoutX="41.0" layoutY="53.0" text="Clone" textAlignment="CENTER" />
                     </children>
                        </Group>
                        <Group fx:id="hide" layoutX="152.0" layoutY="6.0">
                     <children>
                        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="93.0" opacity="0.0" stroke="BLACK" strokeType="INSIDE" width="57.0" />
                                <ImageView fx:id="hideicon" fitHeight="14.0" fitWidth="14.0" layoutX="23.0" layoutY="20.0">
                                    <Image url="@../../../hide.jpg" />
                                </ImageView>
                                <Text fx:id="hidetext" fill="#edeeef" layoutX="17.0" layoutY="59.0" text="Hide" textAlignment="CENTER" />
                     </children>
                        </Group>
                    </children>
                </Group>
            </children>
        </HBox>

        <MenuBar prefHeight="1.0" prefWidth="134.0" stylesheets="@../../../style.css">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Open File" />
            </items>
              <items>
                  <MenuItem mnemonicParsing="false" text="Close" />
              </items>
          </Menu>

            <Menu mnemonicParsing="false" text="Edit">
              <items>
                  <MenuItem mnemonicParsing="false" text="Copy" />
              </items>
              <items>
                  <MenuItem mnemonicParsing="false" text="Clone" />
              </items>
              <items>
                  <MenuItem mnemonicParsing="false" text="Hide" />
              </items>
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>

        </menus>
      </MenuBar>



    </children>
</AnchorPane>
